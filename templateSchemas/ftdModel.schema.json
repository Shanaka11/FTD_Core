{
  "$schema": "https://json-schema.org/draft-2020-12/schema",
  "$id": "https://five12daysgeneral.s3.ap-southeast-1.amazonaws.com/ftd-core/ftdModel.schema.json",
  "title": "FTD Model Definition Schema",
  "description": "FTD Schema Definition",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]": {
          "type": "object",
          "required": ["flags", "type"],
          "properties": {
            "label": {
              "type": "string"
            },
            "flags": {
              "type": "string",
              "enum": ["KMI-", "AMIU", "AMI-", "A-I-", "A-IU"]
            },
            "type": {
              "type": "string",
              "enum": [
                "String",
                "Text",
                "Email",
                "Url",
                "Enum",
                "Number",
                "BigNumber",
                "Date",
                "Timestamp",
                "Decimal",
                "Float"
              ]
            },
            "maxLength": {
              "type": "number",
              "minimum": 1
            },
            "enum": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "allOf": [
            {
              "if": {
                "not": {
                  "properties": {
                    "type": { "const": "String" }
                  }
                }
              },
              "then": {
                "not": {
                  "required": ["maxLength"]
                }
              }
            },
            {
              "if": {
                "not": {
                  "properties": {
                    "type": { "const": "Enum" }
                  }
                }
              },
              "then": {
                "not": {
                  "required": ["enum"]
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "String" }
                }
              },
              "then": {
                "required": ["maxLength"]
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "Enum" }
                }
              },
              "then": {
                "required": ["enum"]
              }
            }
          ]
        }
      }
    },
    "relationships": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z][A-Za-z]*$": {
          "type": "object",
          "required": ["model", "relationship", "mapping", "onDelete"],
          "properties": {
            "model": {
              "type": "string",
              "pattern": "^[a-z][A-Za-z]*$"
            },
            "relationship": {
              "type": "string",
              "enum": ["ONE_TO_ONE", "ONE_TO_MANY"]
            },
            "mapping": {
              "type": "object",
              "required": ["from", "to"],
              "properties": {
                "from": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z][A-Za-z]*$"
                  }
                },
                "to": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^[a-z][A-Za-z]*$"
                  }
                }
              }
            },
            "onDelete": {
              "type": "string",
              "enum": ["SET NULL", "RESTRICT", "CASCADE"]
            }
          }
        }
      }
    }
  },
  "required": ["name", "attributes"]
}
